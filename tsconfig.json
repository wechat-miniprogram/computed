{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "target": "ESNEXT",
    "lib": ["ESNEXT"],
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "types": ["jest", "rfdc"]
  },
  "include": ["./src/**/*.ts"]
}
